{
	"name": "crypto_sign",
	"dependencies": ["_crypto_sign"],
	"type": "function",
	"inputs": [
		{
			"name": "message",
			"type": "unsized_buffer"
		},
		{
			"name": "privateKey",
			"type": "buffer",
			"size": "libsodium_raw._crypto_sign_secretkeybytes()"
		}
	],
	"outputs": [
		{
			"type": "buffer",
			"name": "signature",
			"size": "message.length + libsodium_raw._crypto_sign_bytes()"
		},
		{
			"type": "buffer",
			"name": "slen",
			"size": "8"
		}
	],
	"target": "libsodium_raw._crypto_sign(signature_byte, slen_byte, message_byte, message_size, 0, privateKey_byte)",
	"return": "return to_hex(signature.extractBytes())"
}
